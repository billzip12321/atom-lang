<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd" default-autowire="byName">

	<!-- ============================= -->
	<!-- 定时器组件 -->
	<!-- ============================= -->
	<bean class="com.github.obullxl.lang.timer.TickTimerBean" />

	<!-- ============================= -->
	<!-- 调度器配置 -->
	<!-- ============================= -->

	<bean id="tickTimerTask" class="com.github.obullxl.lang.timer.TickTimerTask" />

	<bean id="tickTimerJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="tickTimerTask" />
		<property name="targetMethod" value="doTask" />
	</bean>

	<bean id="tickTimerTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="tickTimerJobDetail" />
		<property name="startDelay" value="10000" /><!-- 延迟10秒执行 -->
		<property name="repeatInterval" value="30000" /><!-- 30秒执行一次 -->
	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="tickTimerTrigger" />
			</list>
		</property>
		<property name="taskExecutor">
			<bean class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
				<property name="corePoolSize" value="1" />
				<property name="maxPoolSize" value="10" />
				<property name="queueCapacity" value="10" />
			</bean>
		</property>
	</bean>

</beans>
